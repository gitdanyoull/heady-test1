{% block body %}

    <!--IMAGE AREA-->
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            {% for i in images %}
                <img src="{{ asset('uploads/brochures/' ~ i.file) | imagine_filter('my_thumb') }}" style="margin-bottom: 4px" />
            {%  endfor %}

        </div>
    </div>

