{% extends 'base.html.twig' %}

{% block title %}
    WickedHeady - Administrator
{% endblock %}

{% block menu %}
    {% include 'admin/menu.html.twig' %}
{% endblock %}

{% block body %}
        <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-success pull-right" onclick="location.href='{{ path('category_new') }}';">Add Category</button><br /><br />
            </div>
            <div class="col-sm-12">

        {% for msg in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                <strong>Success!</strong> Indicates a successful or positive action.
            </div>
        {% endfor %}
        <table class="table table-striped">
            {% for c in categories %}
                <tr>
                    <td>{{c.categoryId}}<a href="{{ path('post_edit', {'id': c.categoryId}) }}">
                            {{c.category}}</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
            </div>
        </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
